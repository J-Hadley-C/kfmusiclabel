{% extends 'base.html.twig' %}

{% block title %}Dashboard Producteur{% endblock %}

{% block body %}
<div class="producteur-dashboard">
    {% if isAdmin %}
        <h1>Bienvenue sur le Dashboard Administrateur des Producteurs</h1>
        <p>En tant qu'administrateur, vous avez accès à tous les artistes.</p>
    {% else %}
        <h1>Bienvenue sur votre Dashboard, Producteur</h1>
        <p>Vous pouvez voir ici les artistes que vous suivez.</p>
    {% endif %}

    <h2>Artistes Suivis</h2>
    <ul>
        {% for follow in followedArtists %}
            <li>{{ follow.artist.name }}</li>
        {% else %}
            <li>Aucun artiste suivi.</li>
        {% endfor %}
    </ul>

    <h2>Tous les Artistes</h2>
    <ul>
        {% for artist in allArtists %}
            <li>{{ artist.name }}</li>
        {% else %}
            <li>Aucun artiste trouvé.</li>
        {% endfor %}
    </ul>

    <h2>Collaborations</h2>
    <p><a href="{{ path('collaborations_list') }}">Voir toutes les collaborations</a></p>
    <p><a href="{{ path('collaborations_new') }}">Créer une nouvelle collaboration</a></p>
</div>
{% endblock %}
