{% extends 'base.html.twig' %}

{% block title %}Dashboard Artiste{% endblock %}

{% block body %}
<div class="artist-dashboard">
    {% if isAdmin %}
        <h1>Bienvenue sur le Dashboard Administrateur des Artistes</h1>
        <p>En tant qu'administrateur, vous pouvez voir toutes les musiques créées par les artistes.</p>
    {% else %}
        <h1>Bienvenue sur votre Dashboard, Artiste</h1>
        <p>Vous pouvez voir ici toutes vos musiques.</p>
    {% endif %}

    <h2>Liste des Musiques</h2>
    <ul>
        {% for music in musics %}
            <li>
                <strong>{{ music.title }}</strong> - {{ music.createdAt|date('d/m/Y') }}
                <br>
                <img src="{{ asset('uploads/' ~ music.cover) }}" alt="Cover de {{ music.title }}" width="100">
                <br>
                <a href="{{ music.link }}">Écouter</a>
            </li>
        {% else %}
            <li>Aucune musique trouvée.</li>
        {% endfor %}
    </ul>

    <h2>Collaborations</h2>
    <p><a href="{{ path('collaborations_list') }}">Voir toutes les collaborations</a></p>
    <p><a href="{{ path('collaborations_new') }}">Créer une nouvelle collaboration</a></p>
</div>
{% endblock %}
