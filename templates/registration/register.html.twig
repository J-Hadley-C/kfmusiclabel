{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Créer un compte</h1>
    <form method="post" action="{{ path('app_register') }}" enctype="multipart/form-data">
        {{ form_start(registrationForm) }}
        
        {{ form_row(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
        {{ form_row(registrationForm.nickname, {'attr': {'placeholder': 'Pseudonyme'}}) }}
        {{ form_row(registrationForm.phone, {'attr': {'placeholder': 'Téléphone'}}) }}
        {{ form_row(registrationForm.password.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
        {{ form_row(registrationForm.password.second, {'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}

        <!-- Ajout de la classe pour styliser le champ de fichier -->
        <div class="form-file">
            {{ form_row(registrationForm.photo) }}
        </div>

        <button type="submit" class="btn">S'inscrire</button>
        
        {{ form_end(registrationForm) }}
    </form>
    <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
</div>
{% endblock %}
