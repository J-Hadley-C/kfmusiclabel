{% extends 'base.html.twig' %}

{% block title %}Liste des Collaborations{% endblock %}

{% block body %}
    <h1>Liste des Collaborations</h1>

    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Statut</th>
                <th>Initiateur</th>
                <th>Date de Création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for collaboration in collaborations %}
                <tr>
                    <td>{{ collaboration.title }}</td>
                    <td>{{ collaboration.status }}</td>
                    <td>{% if collaboration.initiator %}{{ collaboration.initiator.name }}{% else %}Non spécifié{% endif %}</td>
                    <td>{{ collaboration.createdAt|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('collaboration_detail', { id: collaboration.id }) }}">Voir les détails</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune collaboration trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('collaborations_new') }}" class="btn btn-primary">Créer une Nouvelle Collaboration</a>
{% endblock %}
