{# Ce fichier est la page où l'utilisateur entre son nouveau mot de passe après avoir cliqué sur le lien de réinitialisation. #}{# templates/security/reset_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <h1>Réinitialiser votre mot de passe</h1>
    <p>Veuillez entrer votre nouveau mot de passe.</p>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post" action="{{ path('app_reset_password', {token: token}) }}">
        <div class="form-group">
            <label for="password">Nouveau mot de passe :</label>
            <input type="password" id="password" name="password" required class="form-control">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Réinitialiser le mot de passe</button>
    </form>
{% endblock %}
