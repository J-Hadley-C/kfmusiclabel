{# Ce fichier affiche le formulaire pour entrer l'email et demander une réinitialisation. #}{# templates/security/request_reset_password.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation du mot de passe{% endblock %}

{% block body %}
    <h1>Réinitialisation du mot de passe</h1>
    <p>Veuillez entrer votre adresse email pour recevoir un lien de réinitialisation de mot de passe.</p>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post" action="{{ path('app_forgot_password_request') }}">
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" required class="form-control">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Envoyer le lien de réinitialisation</button>
    </form>
{% endblock %}
